---
export interface Props {
  title: string
  description: string
  link: string
  image: string
  alt: string
}

const { title, description, link, image, alt } = Astro.props
---

<article>
  <a
    href={link}
    class="inline-flex items-center gap-1 text-lg font-semibold text-gray-800 hover:text-blue-500 transition-colors dark:text-gray-200 dark:hover:text-blue-400"
  >
    {title} â†—
  </a>
  <p class="mt-1 text-sm text-gray-500 max-w-md dark:text-gray-400">
    {description}
  </p>
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="mt-4 group block overflow-hidden rounded-lg shadow-sm transition-transform duration-200 ease-in-out hover:scale-[0.99] active:scale-[0.97]"
  >
    <img
      src={image}
      alt={alt}
      class="w-full object-cover transition-opacity duration-300 group-hover:opacity-90"
    />
  </a>
</article>
