  title: string;
  description: string;
  link: string;
  image: string;
  alt: string;
}

const { title, description, link, image, alt } = Astro.props;
---

<article>
  <a
    href={link}
    class="inline-flex items-center gap-1 text-lg font-semibold text-gray-800 hover:text-blue-500 transition-colors"
  >
